{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.ttf",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "font/ttf"
                    }
                ]
            },
            {
                "source": "**/*.woff",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "font/woff"
                    }
                ]
            },
            {
                "source": "**/*.woff2",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "font/woff2"
                    }
                ]
            },
            {
                "source": "**/*.otf",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "font/otf"
                    }
                ]
            }
        ]
    }
}